<div class="export-container">
    <h3 class="export-title"><i class="fas fa-file-export me-2"></i>Exportar Datos</h3>

    <div class="export-card">
        <div class="export-filters">
            <!-- Selector de Tabla -->
            <div class="filter-group">
                <label class="filter-label">Tabla a Exportar</label>
                <select class="form-select">
                    <option value="">Seleccione una tabla</option>
                    <option value="Usuarios">Usuarios</option>
                    <option value="EvaluacionesDocentes">Evaluaciones Docentes</option>
                    <option value="Capacitaciones">Capacitaciones</option>
                    <option value="Obras">Obras</option>
                    <option value="Investigaciones">Investigaciones</option>
                </select>
            </div>

            <!-- Selector de Formato -->
            <div class="filter-group">
                <label class="filter-label">Formato de Exportación</label>
                <select class="form-select">
                    <option value="Excel">Excel (.xlsx)</option>
                    <option value="CSV">CSV (.csv)</option>
                    <option value="PDF">PDF (.pdf)</option>
                </select>
            </div>

            <!-- Botón de Exportación -->
            <div class="export-button">
                <button class="btn btn-primary">
                    <i class="fas fa-download me-2"></i>Exportar
                </button>
            </div>
        </div>

        <!-- Filtros Adicionales (se muestran dinámicamente con CSS) -->
        <div class="additional-filters">
            <div class="filter-section">
                <h6><i class="fas fa-filter me-2"></i>Filtros Adicionales</h6>

                <!-- Filtros para Usuarios -->
                <div class="filter-row usuario-filters">
                    <div class="filter-item">
                        <label>Tipo de Usuario</label>
                        <select class="form-select">
                            <option value="">Todos</option>
                            <option value="admin">Administradores</option>
                            <option value="docente">Docentes</option>
                        </select>
                    </div>

                    <div class="filter-item">
                        <label>Fecha Desde</label>
                        <input type="date" class="form-control">
                    </div>

                    <div class="filter-item">
                        <label>Fecha Hasta</label>
                        <input type="date" class="form-control">
                    </div>
                </div>

                <!-- Filtros para Evaluaciones -->
                <div class="filter-row evaluacion-filters">
                    <div class="filter-item">
                        <label>Período</label>
                        <input type="text" class="form-control" placeholder="Ej: 2023-1">
                    </div>

                    <div class="filter-item">
                        <label>Puntaje Mínimo</label>
                        <input type="number" step="0.01" class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

