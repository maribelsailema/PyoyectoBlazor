@page "/inicio-admin"
@using System.Net.Http.Json
@using Proyecto.Backend.Domain.Entities.Models
@using Proyecto.Shared.Models
@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject HttpClient Http

<style>
    /* Variables de color rojo */
    :root {
        --primary-red: #8B0000; /* Dark Red */
        --accent-red: #a52a2a; /* Lighter Red for hover/active */
        --text-light: #f8f9fa; /* Blanco */
        --text-dark: #343a40;
        --background-light: #f5f5f5;
        --background-dark: #e9ecef;
        --danger-color: #E74C3C; /* Strong red for danger actions */
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: var(--background-light);
        color: var(--text-dark);
    }

    /* Barra Superior Estilo Rojo */
    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--primary-red);
        padding: 1rem 2rem;
        color: var(--text-light);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .navbar-left h3 {
        margin: 0;
        font-size: 1.7rem;
        color: var(--text-light);
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
    }

    .nav-item {
        color: var(--text-light);
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: background-color 0.3s ease, color 0.3s ease;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
    }

        .nav-item i {
            margin-right: 0.5rem;
            color: var(--text-light);
        }

        .nav-item:hover {
            background-color: var(--accent-red);
            color: var(--text-light);
        }

        .nav-item.active {
            background-color: var(--accent-red);
            font-weight: bold;
            color: var(--text-light);
        }

    /* Botón "Cerrar Sesión" */
    .cerrar-sesion {
        background-color: var(--danger-color);
        color: var(--text-light);
    }

        .cerrar-sesion:hover {
            background-color: #c0392b;
            color: var(--text-light);
        }

    /* Contenido Principal */
    .contenido {
        padding: 3rem 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 150px - 100px);
    }

    .bienvenida {
        background-color: #ffffff;
        padding: 3rem 4rem;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 800px;
        width: 100%;
        border: 2px solid var(--primary-red);
    }

        .bienvenida h2 {
            color: var(--primary-red);
            font-size: 2.2rem;
            margin-bottom: 1.5rem;
        }

        .bienvenida p {
            color: var(--text-dark);
            font-size: 1.1rem;
            line-height: 1.6;
        }

    /* Pie de Página */
    .footer {
        background-color: var(--primary-red);
        color: var(--text-light);
        padding: 2.5rem 2rem;
        text-align: center;
        font-size: 1rem;
        box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.2);
    }

    .footer-info {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        margin-bottom: 2rem;
        gap: 1.5rem;
    }

    .footer-section {
        flex: 1;
        min-width: 250px;
        text-align: left;
        padding: 0 1rem;
    }

        .footer-section h4 {
            color: var(--text-light);
            font-size: 1.3rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

            .footer-section h4 i {
                margin-right: 0.6rem;
                font-size: 1.5rem;
            }

        .footer-section p, .footer-section a {
            color: var(--text-light);
            text-decoration: none;
            line-height: 1.6;
            transition: color 0.3s ease;
        }

            .footer-section a:hover {
                color: var(--background-dark);
            }

            .footer-section a i {
                margin-right: 0.5rem;
            }

    .copyright {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        font-size: 0.95rem;
        opacity: 0.9;
    }
</style>

<header class="navbar">
